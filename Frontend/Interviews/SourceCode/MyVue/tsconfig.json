{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
