{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "lib": [
      "es2021.intl"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test"
  ]
}
